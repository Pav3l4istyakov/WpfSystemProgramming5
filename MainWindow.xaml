<Window x:Class="WpfSystemProgramming5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSystemProgramming5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <Button Content="Запустить гонку данных" Click="ButtonRaceCondition_Click" Margin="5"/>
            <Button Content="Запустить безопасное добавление" Click="ButtonSafeAdd_Click" Margin="5"/>
            <Button Content="Запустить монитор с таймаутом" Click="ButtonMonitorTimeout_Click" Margin="6"/>
        </StackPanel>
    </Grid>
</Window>
